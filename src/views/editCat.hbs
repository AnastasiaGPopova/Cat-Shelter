
    <main>
        <form action="/edit/{{currentCat._id}}" method="POST" class="cat-form">
            <h2>Edit Cat</h2>
            <label for="name">Name</label>
            <input type="text" name="name" value={{currentCat.name}}>
            <label for="description">Description</label>
            <textarea name="description">{{currentCat.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" name="imageUrl" name={{currentCat.imageUrl}}>
            <label for="group">Breed</label>
            <select name="breed" id="group">
                <option value="Fluffy Cat">{{currentCat.breed}}</option>
                {{#each breeds}}
                {{>breed}}
                {{/each}}
            </select>
            <button>Edit Cat</button>
        </form>
    </main>
